{% javascript %}
  $(".card").append("<div><img src=https://cdn.shopify.com/s/files/1/0637/3346/5308/files/b2f6a5d525c730aa8c2e153233f177c7.png /><img src=https://cdn.shopify.com/s/files/1/0637/3346/5308/files/93c0cfdf1156cb9c97b1ed15698c4f66.png /></div>")
  $(".card > div").addClass("pr card_side--front");
  $(".card > div > img:last").addClass("click");
  $(".card").one("click", function(){
    $(".card").empty();
    $(".card").append("<div><img src=https://cdn.shopify.com/s/files/1/0637/3346/5308/files/logo_d0064a94-d668-4ba6-a1b3-9d3fb036170a.png /></div>")
    $(".card > div").addClass("card__side--back");
    $(".card > div").addClass("card__side--back-click")
  })
{% endjavascript %}

{%- render 'section_css' -%}
{%- style -%}
.nt_se_{{section.id}} .logo_list_content{
  background:{{section.settings.background_color}};
  border-radius:{{section.settings.border_radius}}px;
}
.nt_se_{{section.id}} .logo_item .title{
  color: {{section.settings.text_color}};
}
{%- endstyle -%}

