            <div class="content">
              <div class="title pr">
                <span></span>
                <p class="pr">{{ se_blocks[2].settings.block_title | escape }}</p>
              </div>
              <div class="sub_txt">{{ se_blocks[2].settings.block_sub_title | escape }}</div>
            </div>
          </div>
        </div>
      </div>

      <div class="col-12 card_wrap pr">
        <div class="arrow pa">
          <img src="https://cdn.shopify.com/s/files/1/0637/3346/5308/files/dbc7acec372d3103ab433df66574379f.png" />
        </div>
        <div class="card flex"></div>
