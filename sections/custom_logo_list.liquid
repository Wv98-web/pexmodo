{%- liquid
  assign se_blocks = section.blocks -%}

<div class="nt_se_{{section.id}} {{section.settings.layout}} logo_list">
  {%- render 'section_title_new_custom',section:section -%}

  <div class="pc_block mt__30">
    <div class="logo_list_content">
      <div class="logo_group">
        <div class="col-3 logo_item_wrap pr">
          <div class="logo_item">
            <img src="{{ se_blocks[0].settings.image | img_url: 'master' }}" />
            <div class="content">
              <div class="title pr">
                <span></span>
                <p class="pr">{{ se_blocks[0].settings.block_title | escape }}</p>
              </div>
              <div class="sub_txt">{{ se_blocks[0].settings.block_sub_title | escape }}</div>
            </div>
          </div>

          <div class="plus">
            <img src="https://cdn.shopify.com/s/files/1/0637/3346/5308/files/2x_8374e6b1-02ce-4ca1-84ad-457998ed6c31.png" />
          </div>
        </div>

        <div class="col-3 logo_item_wrap pr">
          <div class="logo_item">
            <img src="{{ se_blocks[1].settings.image | img_url: 'master' }}" />
            <div class="content">
              <div class="title pr">
                <span></span>
                <p class="pr">{{ se_blocks[1].settings.block_title | escape }}</p>
              </div>
              <div class="sub_txt">{{ se_blocks[1].settings.block_sub_title | escape }}</div>
            </div>
          </div>

          <div class="plus">
            <img src="https://cdn.shopify.com/s/files/1/0637/3346/5308/files/2x_8374e6b1-02ce-4ca1-84ad-457998ed6c31.png" />
          </div>
        </div>

        <div class="col-3 logo_item_wrap pr">
          <div class="logo_item">
            <img src="{{ se_blocks[2].settings.image | img_url: 'master' }}" />
            <div class="content">
              <div class="title pr">
                <span></span>
                <p class="pr">{{ se_blocks[2].settings.block_title | escape }}</p>
              </div>
              <div class="sub_txt">{{ se_blocks[2].settings.block_sub_title | escape }}</div>
            </div>
          </div>

          <div class="arrow">
            <img src="https://cdn.shopify.com/s/files/1/0637/3346/5308/files/2x_42444b4b-e9fb-491b-b0ee-31ee1f884098.png" />
          </div>
        </div>

        <div class="col-3 logo_item_wrap">
