{%- liquid
  assign sett_title = section.settings.title
	assign sett_tag_image = section.settings.tag_image
  assign style_title = section.settings.style_title -%}
{%- if sett_title != blank -%}
	{%- if style_title == 'title_14' -%}
		<div class="wrap_title {{section_title}} des_{{style_title}}">
			<h3 class="section-title tc pr flex fl_center al_center {{style_title}}">
				<div class="mr__10 ml__10 pr">
					{{sett_title}}
					{%- if sett_tag_image != block  -%}
						<img class="section_title_tag {% if section.settings.sub_font =='3'%}pc_block{% endif %}" src="{{sett_tag_image | img_url:'master'}}" alt="{{sett_tag_image.alt | escape }}"/>
					{%- endif -%}
				</div>
			</h3>
			<span class="section-subtitle db tc{% if section.settings.sub_font == '2' %} sub-title{%elsif section.settings.sub_font=='3'%} sub-title3 mobile_block{% endif %}">
				{{section.settings.sub_title}}
			</span>
		</div>
	{%- elsif style_title == 'title_15' -%}
		<div class="wrap_title {{section_title}} des_{{style_title}} mb__30">
			<h3 class="section-title tc pr flex fl_center al_center {{style_title}}">
				<span class="mr__10 ml__10 pr">
					{{sett_title}}
				</span>
			</h3>
			<span class="section-subtitle db tc{% if section.settings.sub_font == '2' %} sub-title{% endif %}">
				{{section.settings.sub_title}}
			</span>
		</div>
	{%- elsif style_title == 'title_16' -%}
		<div class="wrap_title {{section_title}} des_{{style_title}}">
			<h3 class="section-title tc pr flex fl_center al_center {{style_title}}">
				<span class="mr__10 ml__10 pr">
					{{sett_title}}
					<img class="image_bottom" src="https://cdn.shopify.com/s/files/1/0637/3346/5308/files/pexmod_2x_e41438fc-0b69-4394-aa46-3231a8044eaf.png?v=1651736231" />
				</span>
			</h3>
			<span class="section-subtitle db tc{% if section.settings.sub_font == '2' %} sub-title{% endif %}">
				{{section.settings.sub_title}}
			</span>
			<span class="db tt_divider"></span>
		</div>
	{%- elsif style_title != 'title_10' -%}
		<div class="wrap_title {{section_title}} des_{{style_title}}">
		<h3 class="section-title tc pr flex fl_center al_center fs__24 {{style_title}}"><span class="mr__10 ml__10">{{sett_title}}</span></h3>
		<span class="dn tt_divider"><span></span><i class="dn clpr{{section.settings.show_clpr}} {{style_title |split:'+' | last }} la-{{section.settings.ic_tt}}"></i><span></span></span><span class="section-subtitle db tc{% if section.settings.sub_font == '2' %} sub-title{% endif %}">{{section.settings.sub_title}}</span>
		</div>
	{%- else -%}
	    <div class="row al_center fl_center title_10 {{section_title}}">
	      <div class="col-auto col-md"><h3 class="dib tc section-title fs__24">{{sett_title}}</h3></div>
	      <div class="col-auto"><a href="{{url|default:'/'}}">{{section.settings.btn_title}}</a></div>
	    </div>
	{%- endif -%}
{%- endif -%}

