{%- liquid
  assign sett_title = section.settings.title
  assign style_title = section.settings.style_title
	assign sett_tag_image = section.settings.tag_image
	assign show_bottom_border = section.settings.show_bottom_border
	assign lighted = section.settings.lighted -%}
{%- if sett_title != blank -%}
	{%- if style_title == 'title_new' -%}
		<div class="section_title_new_custom wrap_title {{section_title}} des_{{style_title}}" style="{%- if show_bottom_border -%}border-bottom: 2px solid rgba(119, 119, 119, 0.17);padding-bottom: 2.5rem;{%- endif -%}">
			<h3 class="section-title tc pr flex fl_center al_center fs__24 {{style_title}} {% if lighted %}lighted{% endif %}">
				<span class="mr__10 ml__10 pr">
					{{sett_title}}
					{%- if sett_tag_image != block  -%}
						<img class="section_title_tag {% if section.settings.sub_font =='3'%}pc_block{% endif %}" src="{{sett_tag_image | img_url:'master'}}" alt="{{sett_tag_image.alt | escape }}"/>
					{%- endif -%}
				</span>
			</h3>
			<span class="dn tt_divider mobile_block">
				<span></span>
				<i class="dn clpr{{section.settings.show_clpr}} {{style_title |split:'+' | last }} la-{{section.settings.ic_tt}}"></i>
				<span></span>
			</span>
			<span class="section-subtitle db tc{% if section.settings.sub_font == '2' %} sub-title{%elsif section.settings.sub_font=='3'%} sub-title3{% endif %}">{{section.settings.sub_title}}</span>
		</div>
	{%- elsif style_title != 'title_10' -%}
		<div class="wrap_title {{section_title}} des_{{style_title}}">
			<h3 class="section-title tc pr flex fl_center al_center fs__24 {{style_title}}">
				<span class="mr__10 ml__10">{{sett_title}}</span>
			</h3>
			<span class="dn tt_divider"><span></span><i class="dn clpr{{section.settings.show_clpr}} {{style_title |split:'+' | last }} la-{{section.settings.ic_tt}}"></i><span></span></span><span class="section-subtitle db tc{% if section.settings.sub_font == '2' %} sub-title{% endif %}">{{section.settings.sub_title}}</span>
		</div>
	{%- else -%}
		<div class="row al_center fl_center title_10 {{section_title}}">
			<div class="col-auto col-md">
				<h3 class="dib tc section-title fs__24">{{sett_title}}</h3>
			</div>
			<div class="col-auto">
				<a href="{{url|default:'/'}}">{{section.settings.btn_title}}</a>
			</div>
		</div>
	{%- endif -%}
{%- endif -%}